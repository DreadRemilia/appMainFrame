<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.OptionFragment_">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0">

        <Button
            android:id="@+id/optionToCOpt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintVertical_bias="0.88"
            android:background="#E4DBDB"
            android:paddingLeft="20dp"
            android:text="更改设置"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="22dp"
            app:layout_constraintWidth_percent="1"
            android:src="@drawable/devidedline"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/optionLogout"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.08"
            android:background="#FA4848"
            android:text="退出系统"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.99"/>

        <TextView
            android:id="@+id/optionShowSex"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0.14"
            app:layout_constraintStart_toEndOf="@id/textView15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:text="您好:"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.1"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="用户类别："
            android:textAlignment="center"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/textView15"
            app:layout_constraintBottom_toBottomOf="@id/textView21"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:text="性别："
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.14"
            app:layout_constraintHorizontal_bias="0.15"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/optionShowCount"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/textView21"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.39"
            android:textSize="20sp" />

        <Button
            android:id="@+id/optionToNSer"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintVertical_bias="0.58"
            android:background="#E4DBDB"
            android:paddingLeft="20dp"
            android:text="当前服务"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/optionShowUser"
            android:layout_width="227dp"
            android:layout_height="36dp"
            android:textAlignment="gravity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.8"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/optionShowType"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/textView19"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/optionShowSex"
            app:layout_constraintBottom_toBottomOf="@id/optionShowCount"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/imageRef"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.2"/>

        <Button
            android:id="@+id/optionToHSer"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintVertical_bias="0.73"
            android:background="#E4DBDB"
            android:paddingLeft="20dp"
            android:text="历史服务"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="服务总数："
            android:textAlignment="center"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="20sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>